generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

enum DocumentStatus {
  uploaded
  pending_replace
  pending_remove
}

model Users {
  id         Int         @id @default(autoincrement())
  name       String
  username   String      @unique
  password   String
  role       UserRole
  created_at DateTime    @default(now())
  updated_at DateTime    @updatedAt
  documents  Documents[]

  @@map("users")
}

model Documents {
  id                    Int            @id @default(autoincrement())
  name_doc              String
  url_doc               String
  status                DocumentStatus @default(uploaded)
  is_remove_permission  Boolean        @default(false)
  is_replace_permission Boolean        @default(false)
  created_at            DateTime       @default(now())
  updated_at            DateTime       @updatedAt
  created_by            String
  updated_by            String?
  user_id               Int
  user                  Users          @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("documents")
}
